{
  "name": "blog",
  "version": "1.0.1",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "immortal521",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "fmt:go": "cd backend && go fmt ./...",
    "lint:go": "cd backend && golangci-lint run ./...",
    "fmt:go:staged": "cd backend && go fmt ./... && golangci-lint run --fix ./...",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && go run ./cmd"
  },
  "dependencies": {
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "frontend/**/*.{js,vue,ts}": [
      "eslint --fix",
      "oxfmt"
    ],
    "backend": [
      "go fmt ./...",
      "golangci-lint run ./..."
    ]
  },
  "packageManager": "pnpm@10.15.0"
}
